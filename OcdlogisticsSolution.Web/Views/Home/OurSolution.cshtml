
@model IEnumerable<OcdlogisticsSolution.DomainModels.Models.Entity_Models.Tbl_OurSolution>
<div class="max-wid container padi-tb-50">
    <div class="cati-head-text">
        <h1>Our Solutions</h1>
    </div>
    <div class=" responsive-slider-cus-4">
        <div id="newproduct" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner  " role="listbox">
                @foreach (var item in Model.Select((value, i) => new { value, i }))
                {
                   
                        <div class="carousel-item @if (item.i==0){<text>active</text>}">
                            <div class="col-lg-3 col-md-6 col-xl-3 col-sm-6 col-6">
                                <div class="t-p-s-box-3 Fullfillment" style="background-color:@item.value.ButtonColor">
                                    <div class="head-icon">
                                        <a href=""><img src="@item.value.Logo" alt=""></a>
                                    </div>
                                    <a href="">
                                        <div class="tab-p-img-3">
                                            <img src="@item.value.Img" alt="">
                                            <div class="bg-trans"></div>
                                        </div>
                                        <div class="company-name ser-name">@item.value.ImgText</div>
                                        <div class="bname"></div>

                                        <button class="btn-sol mb">@item.value.ButtonText</button>
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                   
                </div>
            <a class="carousel-control-prev bg-dark w-auto" href="#newproduct" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next bg-dark w-auto" href="#newproduct" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


</div>
