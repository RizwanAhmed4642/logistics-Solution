    </div>
</div>

<div class="acc-tabs bg-cust " style="background:@(!string.IsNullOrWhiteSpace(Model.tbl_ProfilePage.BackGroungdColorbody)?@Model.tbl_ProfilePage.BackGroungdColorbody:"url(\'"+@Model.tbl_ProfilePage.bckimg2+"\')")">
    @if (!string.IsNullOrEmpty(Model.tbl_TeamProfiles.FavoriteQuote))
    {
        <div class="container padi-tb-50">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12">
                    <h2 class="banner">"@Model.tbl_TeamProfiles.FavoriteQuote"</h2>
                </div>
            </div>
        </div>
    }
    <div class="acc-tabs">
        <div class="container">
            <div class="row pb-3 pt-4">
                <div id="accordionFaq " class="myaccordion rem-bg-clr">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(Model.tbl_TeamProfiles.Bio))
                        {
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">

                                    <button class="d-flex align-items-center justify-content-between btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        Bio
                                        <span class="fa-stack fa-sm">
                                            <i class="fa fa-angle-down"></i>
                                        </span>
                                    </button>
                                </h2>
                            </div>
                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionFaq">
                                <div class="card-body">

                                    <p>@Html.Raw(Model.tbl_TeamProfiles.Bio)</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card">
                        @if (!string.IsNullOrEmpty(Model.tbl_TeamProfiles.Credentials))
                        {
                            <div class="card-header" id="headingTwo">
                                <h2 class="mb-0">
                                    <button class="d-flex align-items-center justify-content-between btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Credentials
                                        <span class="fa-stack fa-2x">
                                            <i class="fa fa-angle-down"></i>
                                        </span>
                                    </button>
                                </h2>
                            </div>
                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionFaq">
                                <div class="card-body">
                                    <p>@Html.Raw(Model.tbl_TeamProfiles.Credentials)</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card">
                        @if (!string.IsNullOrEmpty(Model.tbl_TeamProfiles.PassionandHobbies))
                        {
                            <div class="card-header" id="headingThree">
                                <h2 class="mb-0">
                                    <button class="d-flex align-items-center justify-content-between btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        PASSIONS & HOBBIES
                                        <span class="fa-stack fa-2x">
                                            <i class="fa fa-angle-down"></i>
                                        </span>
                                    </button>
                                </h2>
                            </div>
                            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionFaq">
                                <div class="card-body">
                                    <p>@Html.Raw(Model.tbl_TeamProfiles.PassionandHobbies)</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card">
                        @if (!string.IsNullOrEmpty(Model.tbl_TeamProfiles.MyWork))
                        {
                            <div class="card-header" id="headingFour">
                                <h2 class="mb-0">
                                    <button class="d-flex align-items-center justify-content-between btn btn-link collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        MY WHY
                                        <span class="fa-stack fa-2x">
                                            <i class="fa fa-angle-down"></i>
                                        </span>
                                    </button>
                                </h2>
                            </div>
                            <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionFaq">
                                <div class="card-body">
                                    <p>@Html.Raw(Model.tbl_TeamProfiles.MyWork)</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







<div class="bg-cust pb-5" style="background:@(!string.IsNullOrWhiteSpace(Model.tbl_ProfilePage.BackGroungdColorFootr)?@Model.tbl_ProfilePage.BackGroungdColorFootr:"url(\'"+@Model.tbl_ProfilePage.bckimg3+"\')")">
    <div class="container pt-5 expert-cus img-wid-set">
        <div class="row">
            <div class="col-md-6">
                <div class="cdeck">
                    <div class="card text-center">
                        <div class="img">
                            @if (!string.IsNullOrEmpty(Model.tbl_ProfilePage.ProfilePageSeminarImage) || Model.tbl_ProfilePage.ProfilePageSeminarImage != "")
                            {
                                <img src="@Model.tbl_ProfilePage.ProfilePageSeminarImage" alt="" srcset="">
                            }
                            else
                            {
                                <img src="/Areas/AdminDashboard/assets/media/users/blank.png" alt="">
                            }
                            <!-- <p>540x540</p> -->
                        </div>
                        <div class="card-img-overlay text-white">
                            <div class="card-title">
                                <h4>@Model.tbl_ProfilePage.ExpertImageText</h4>
                            </div>
                        </div>
                    </div>
                    <button class="cnt-btn btnCard">Discover Your Solution</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="cdeck">
                    <div class="card text-center">
                        <div class="img">
                            @if (!string.IsNullOrEmpty(Model.tbl_ProfilePage.ProfilePageExpertImage) || Model.tbl_ProfilePage.ProfilePageExpertImage != "")
                            {
                                <img src="@Model.tbl_ProfilePage.ProfilePageExpertImage" alt="" srcset="">
                            }
                            else
                            {
                                <img src="/Areas/AdminDashboard/assets/media/users/blank.png" alt="">
                            }
                        </div>
                        <div class="card-img-overlay text-white">
                            <div class="card-title">
                                <h4>@Model.tbl_ProfilePage.SeminarImageText</h4>

                            </div>
                        </div>
                    </div>
                    <button class="cnt-btn btnCard">Save the Date</button>
                </div>
            </div>
        </div>
        <h2 class="last-banner text-center pt-3">"@Model.tbl_ProfilePage.ProfilePageQuote"</h2>
    </div>
</div>