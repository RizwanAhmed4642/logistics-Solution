@model OcdlogisticsSolution.Common.ViewModels.ResourcesModel.ResourceSheduleViewModel
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

}


<style>
    .form-control {
        border-radius: 4px;
    }
</style>
<div class="p-2">
    <div class="d-flex mb-5 justify-content-center">
        <div class="col-sm-11 col-xl-8 col-lg-8 col-md-9">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <h3>
                            Resource Available
                        </h3>
                    </div>
                </div>
                <div>
                    <h4 class="p-5 mb-0 bg-light">
                        Hours Available
                    </h4>
                    <table class="table">
                        <tr>
                            <td>
                                <b class="pt-5 pb-5 pl-4">
                                    Use Store Hours:
                                </b>
                            </td>
                            <td>
                                <div class="form-group mb-0">
                                    <input type="checkbox" name="IsUseStoreHoures" id="IsUseStoreHoures" />
                                    <label for="IsUseStoreHoures">
                                        Same As Store Hours
                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div>
                                    @Html.EditorFor(model => model.Weekdays)
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Areas/Admin/Assets/plugins/time/mdtimepicker.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/Assets/plugins/time/mdtimepicker.js"></script>
<div id="timePicker">
    <input type="text" />
</div>
<script>
    $('#timePicker').mdtimepicker('show');
</script>

