@model  OcdlogisticsSolution.Common.ViewModels.ResourcesModel.WeekdayViewModel


<div class="form-horizontal border-bottom">
    <div class="row">
        <div class="form-group col-lg-4 col-sm-12 col-md-6  col-xl-4">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Name, Model.Name)
                @Html.CheckBoxFor(model => model.IsEmployeeAvailable, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WeekDayId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-8 col-xl-8">
            <div class="form-group">
                @Html.LabelFor(model => model.Open, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="d-flex">
                        @Html.EditorFor(model => model.Open, new { htmlAttributes = new { @class = "form-control" } })
                        <button class="btn btn-outline-primary ml-2 time-picker  text-center"><i class="far fa-clock"></i></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Close, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="d-flex">
                        @Html.EditorFor(model => model.Close, new { htmlAttributes = new { @class = "form-control" } })
                        <button class="btn btn-outline-primary time-picker ml-2  text-center"><i class="far fa-clock"></i></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>




