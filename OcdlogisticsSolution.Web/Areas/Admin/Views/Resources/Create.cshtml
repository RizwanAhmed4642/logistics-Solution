@model OcdlogisticsSolution.Common.ViewModels.ResourcesModel.ResourceViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

    ViewBag.Title = "Create";
}

<style>
    .form-control {
        border-radius: 4px;
    }
</style>


<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <!--end::Info-->
            <!--begin::Toolbar-->
            <!--end::Toolbar-->
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h1 class="card-title">
                                Resource Detail
                            </h1>

                        </div>
                        <!--begin::Form-->
                        @using (Html.BeginForm())
                        {
                            <div class="card-body">
                                <div class="form-row justify-content-center">
                                    <div class="form-group col-sm-12 col-md-12 col-xl-7 col-lg-7">
                                        <label for="inputEmail4">Resource Name</label>
                                        <input type="text" class="form-control control-style" name="Name" placeholder="Resource Name">
                                        <br />
                                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-sm-12 col-md-12 col-xl-7 col-lg-7">
                                        <label for="inputEmail5">Displaye Order</label>
                                        <input type="text" class="form-control control-style">
                                    </div>
                                    <div class="form-group col-sm-12 col-md-12 col-xl-7 col-lg-7">
                                        <label for="inputState">Resource Type</label>
                                        @Html.DropDownListFor(x => x.ResourcessTypeId, null, new { @class = "form-control control-style" })
                                        <br />
                                        @Html.ValidationMessageFor(x => x.ResourcessTypeId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-12 col-md-12 col-xl-7 col-lg-7">
                                        <label for="inputState">Active</label>
                                        <select name="IsActive" class="form-control control-style">
                                            <option selected value="true">Active</option>
                                            <option value="false">Deactive</option>
                                        </select>
                                        <br />
                                        @Html.ValidationMessageFor(x => x.IsActive, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <button type="submit" class="btn btn-primary">Delete</button>
                                    </div>
                                </div>
                            </div>
                        }
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->

                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
</div>