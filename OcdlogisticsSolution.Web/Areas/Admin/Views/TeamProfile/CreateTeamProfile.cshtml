    <style>
        .collapsible {
            background-color: white;
            color: #f7742c;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
            height: 100px;
            border-radius: 10px;
            color: #f7742c;
            font-size: x-large;
            font-weight: bold;
        }

            .active, .collapsible:hover {
                color: white;
                background-color: #f7742c;
            }

        .content {
            display: none;
            overflow: hidden;
            background-color: #f1f1f1;
            /*font-size: large;*/
        }

        .help-tip {
            position: absolute;
            top: 18px;
            right: 18px;
            text-align: center;
            background-color: #BCDBEA;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            font-size: 14px;
            line-height: 26px;
            cursor: default;
        }

            .help-tip:before {
                content: '?';
                font-weight: bold;
                color: #fff;
            }

            .help-tip:hover video {
                display: block;
                transform-origin: 100% 0%;
                -webkit-animation: fadeIn 0.3s ease-in-out;
                animation: fadeIn 0.3s ease-in-out;
            }

            .help-tip video { /* The tooltip */
                display: none;
                text-align: left;
                background-color: #1E2021;
                padding: 20px;
                width: 300px;
                position: absolute;
                border-radius: 3px;
                box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
                right: -4px;
                color: #FFF;
                font-size: 13px;
                line-height: 1.4;
            }

                .help-tip video:before { /* The pointer of the tooltip */
                    position: absolute;
                    content: '';
                    width: 0;
                    height: 0;
                    border: 6px solid transparent;
                    border-bottom-color: #1E2021;
                    right: 10px;
                    top: -12px;
                }

                .help-tip video:after { /* Prevents the tooltip from being hidden */
                    width: 100%;
                    height: 40px;
                    content: '';
                    position: absolute;
                    top: -40px;
                    left: 0;
                }

        /* CSS animation */

        @@-webkit-keyframes fadeIn {
            0% {
                opacity: 0;
                transform: scale(0.6);
            }

            100% {
                opacity: 100%;
                transform: scale(1);
            }
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 100%;
            }
        }
    </style>
