@model OcdlogisticsSolution.DomainModels.Models.Entity_Models.Tbl_PrivacyPolicy
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            @if (ViewBag.error != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @ViewBag.error</strong>
                </div>
            }
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Create Privacy Policy</h3>

                        </div>
                        <!--begin::Form-->
                        @using (Html.BeginForm("Index", "PrivacyPolicy", new { area = "" }, FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-12">
                                        @Html.Label("Enter Privacy Policy")
                                        @Html.TextAreaFor(m => m.Contents, new { @class = "form-control", })

                                        @Html.ValidationMessageFor(m => m.Contents, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>
                            <div class="card-footer">

                                <div class="offset-11">
                                    <button type="submit" class="btn btn-primary">UpDate</button>
                                </div>


                            </div>
                        }
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
@section scripts{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script>
        $(document).ready(function () {
            $('#Contents').summernote({
                height: 450
            });
        })
    </script>
}
@section styles{
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
}
