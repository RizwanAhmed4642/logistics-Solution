@model OcdlogisticsSolution.DomainModels.Models.Entity_Models.tbl_PartnerCms
@{
    ViewBag.Title = "EditPartner";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            @if (ViewBag.error != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @ViewBag.error</strong>
                </div>
            }
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Update Partner</h3>

                        </div>
                        <!--begin::Form-->
                        @using (Html.BeginForm("EditPartner", "Patnercms", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @*@Html.HiddenFor(x => x.SliderId)*@
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        @Html.Label("Heading")
                                        @Html.TextBoxFor(m => m.PartnerHeading, new { @class = "form-control", placeholder = "Heading" })

                                        @Html.ValidationMessageFor(m => m.PartnerHeading, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.Label("Content")
                                        @Html.TextBoxFor(m => m.PartnerContent, new { @class = "form-control", placeholder = "Content" })

                                        @Html.ValidationMessageFor(m => m.PartnerContent, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label " style="text-align:center">Partner Image</label>
                                <div class="col-lg-3 col-xl-3">
                                    <div class="image-input image-input-outline" id="kt_image_1" style="height:300px;width:100%">
                                        @if (Model.BackGroundImg != null)
                                        {
                                            <div class="image-input-wrapper" style="background-image: url('@Model.BackGroundImg');height:250px;width:100%"></div>
                                        }
                                        else
                                        {
                                            <div class="image-input-wrapper" style="background-image: url(/Areas/Admin/Assets/media/users/blank.png);height:250px;width:100%"></div>

                                        }
                                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                                            <i class="fa fa-pen icon-sm text-muted"></i>
                                            <input type="file" name="EmpFile1" accept=".png, .jpg, .jpeg" />
                                            <input type="hidden" name="profile_avatar_remove" />
                                        </label>
                                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                                        </span>
                                    </div>
                                    <span class="form-text text-muted">Allowed file types: png, jpg, jpeg. Image must be in square size. Ideal is 540 x 540 px.</span>
                                </div>

                            </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                                    </div>

                                </div>
                            </div>
                        }
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
    @section scripts{
        <script>
        $(document).ready(function () {
            var avatar1 = new KTImageInput('kt_image_1');
           

            avatar1.on('cancel', function (imageInput) {
            });
            avatar1.on('change', function (imageInput) {
            });
            avatar1.on('remove', function (imageInput) {
            });
          
        </script>

    }


